<div style="display: flex;justify-content: space-between;background-color: blue;height: 50px;align-items: center;padding: 10px;">
    <span style="font-size: xx-large;font-weight: bold;color: white;">
        <a href="/" style="text-decoration: none;color: white;">Codeial</a>
    </span>
    <% if(locals.user){%> 
        <ul style="display: flex;align-items: center;list-style: none;">
            <li style="font-size: xx-large;font-weight: bold;color: whitesmoke;margin-right: 5px;"><%= user.name %></li>
            <li> <a style="font-size: xx-large;font-weight: bold;color: whitesmoke;text-decoration: none;"   href="/users/sign-out">Sign out</a></li>
        </ul>
       
        <%}else{%> 
            <div style="display: flex;align-items: center;">
                <a href="/users/sign-in" style="font-size: xx-large;font-weight: bold;color: whitesmoke;margin-right: 5px;text-decoration: none;">Sign In</a>
                <a href="/users/sign-up" style="font-size: xx-large;font-weight: bold;color: whitesmoke;text-decoration: none;">Sign Up</a>
            </div>
            <%} %>

</div>